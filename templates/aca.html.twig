{% extends template_directory ~ '/base.html.twig' %}

{% block page_title %}Loans for Rural Living | {{ display_name }} {% endblock %}

{% block main %}
  <main class="site-main">
    <a id="main-content" tabindex="-1"></a>
    <div class="bar">
      <div class="container">
        <div class="row">
          <div class="col-md-4 offset-md-2">
            <p class="getHelp">GET HELP MOVING<br> TO THE COUNTRY</p>
          </div>
          <div class="col-md-4">
            <a class="btn btn-outline-light btn-block js-scroll-trigger" href="/campaign/{{ association_key }}#download">Get Started</a>
          </div>

        </div>
      </div>
    </div>
    <section class="intro">
      <div class="section-heading">
        <div class="container">
          <h2>What's Your Vision?</h2>
          <p class="lead">Wherever you grow in <strong>life</strong>, {{ display_name }} is by your side, for...</p>
        </div>
      </div>
      <div class="intro-launchpads">
        <div class="container">
          <div class="row">
            <div class="col-md-6">
              <div class="launchpad-item media">
                <img class="launchpad-img" src="img/launchpad-4-family.jpg" width="96" height="96" alt="">
                <div class="media-body">
                  <h5 class="launchpad-title">Family</h5>
                  <p class="launchpad-content">Do you dream of raising your family in a country
                    paradise?</p>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="launchpad-item media">
                <img class="launchpad-img" src="img/launchpad-5-business.jpg" width="96" height="96" alt="">
                <div class="media-body">
                  <h5 class="launchpad-title">Business</h5>
                  <p class="launchpad-content">Do your plans for providing for your family involve a farm
                    or tractor?</p>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="launchpad-item media">
                <img class="launchpad-img" src="img/launchpad-6-nature.jpg" width="96" height="96" alt="">
                <div class="media-body">
                  <h5 class="launchpad-title">Nature</h5>
                  <p class="launchpad-content">Do you want to see whatâ€™s around the next bend on that dirt
                    road?</p>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="launchpad-item media">
                <img class="launchpad-img" src="img/launchpad-7-fun.jpg" width="96" height="96" alt="">
                <div class="media-body">
                  <h5 class="launchpad-title">Fun</h5>
                  <p class="launchpad-content">Is your idea of fun four-wheeling or finding the perfect
                    hunting spot?</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <section class="download" id="download">
      <div class="row no-gutters">
        <div class="col-md-6 download-image"></div>
        <div class="col-md-6 download-form">
          <h2>Get access to our exclusive article</h2>
          <p class="lead">"Moving to The Country: Do You Buy or Build?"</p>
          <span class="sep"></span>
          <div class="contactForm">
            <script type="text/javascript">var loc = "{{ form.loc }}";</script>
            <script type="text/javascript" src="https://az124611.vo.msecnd.net/web/v10/CDWidget.js"></script>
            <div pageID="{{ form.id_for_home_page }}"></div>
          </div>
        </div>
      </div>
    </section>
    <section class="valueadd">
      <div class="section-heading">
        <div class="container">
          <h2>Need more information to <br>make your decision?</h2>
          <p class="lead">Use these exclusive articles to help guide your move to the country.</p>
        </div>
      </div>
      <div class="container">
        <div class="row">
          <div class="col-md-4">
            <a target="_blank" href="/campaign/{{ association_key }}/article-1" class="card card-1">
              <img src="img/card-1-fg.jpg" alt="">
              <h3>Tips for landing the right property</h3>
              <p>8 minute read</p>
            </a>
          </div>
          <div class="col-md-4">
            <a target="_blank" href="/campaign/{{ association_key }}/article-2" class="card card-2">
              <img src="img/card-2-fg.jpg" alt="">
              <h3>How to begin your search for a country home</h3>
              <p>9 minute read</p>
            </a>
          </div>
          <div class="col-md-4">
            <a target="_blank" href="/campaign/{{ association_key }}/article-3" class="card card-3">
              <img src="img/card-3-fg.jpg" alt="">
              <h3>5 mistakes to avoid when buying rural property</h3>
              <p>11 minute read</p>
            </a>
          </div>
        </div>
      </div>
    </section>
    <section class="calculator">
      <div class="section-heading">
        <div class="container">
          <h2>Estimate your monthly payment.</h2>
          <p class="lead">Run the numbers below to get a feel for how much you can afford. Enter your numbers, click "Calculate" and scroll below to view your payment estimate.</p>
        </div>
      </div>
      <div class="container">
        <form class="calcLoan">
          <div class="row">
            <div class="form-group col-md-6">
              <label for="pprice">Purchase Price ($):</label>
              <input class="form-control" id="pprice" type="text" placeholder="Enter Purchase Price" required>
            </div>
            <div class="form-group col-md-6">
              <label for="intrate">Interest rate (%):</label>
              <input class="form-control" id="intrate" type="text" placeholder="Enter Interest Rate" required>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-md-6">
              <label for="dpamt">Down payment ($)</label>
              <input class="form-control" id="dpamt" type="text" placeholder="Enter Down Payment" required>
            </div>
            <div class="form-group col-md-6">
              <label for="numyears">Number of Years:</label>
              <select class="form-control" id="numyears" required>
                <option>20</option>
                <option>15</option>
                <option>10</option>
                <option>5</option>
              </select>
            </div>
          </div>
          <button class="btn btn-block btn-primary" id="calcit">Calculate</button>
          <button class="btn btn-block btn-secondary" id="resetit">Reset</button>
        </form>
        <div id="calcresults"></div>
      </div>
    </section>
    <section class="prefooter" id="prefooter">
      <div class="container">
        <h2 class="display"><span class="fancy">wherever</span><br>you grow</h2>
        <p class="typed">Farm Credit has the tools to help you cultivate your dreams.</p>
        <a href="/campaign/{{ association_key }}/contact" class="btn btn-block btn-outline-light">Start The Conversation</a>
      </div>
    </section>
  </main>
{% endblock %}
