{% extends template_directory ~ '/base.html.twig' %}

{% block page_title %}Contact Us | {{ display_name }} {% endblock %}

{% block header_class %}header-page page-contact{% endblock %}

{% block masthead %}
  <div class="masthead">
    <p class="fancy">ready to get started?</p>
    <h1>Request Information</h1>
    <p class="lead">Have questions or need assistance? Reach out today, and a loan officer will be in touch with
      you shortly to discuss how you can achieve your dreams.</p>
  </div>
{% endblock %}

{% block main %}
  <main class="site-main">
    <a id="main-content" tabindex="-1"></a>
    <section class="main-content">
      <div class="container">
        <div class="contactForm">
          <script type="text/javascript">var loc = "{{ form.loc }}";</script>
          <script type="text/javascript" src="https://az124611.vo.msecnd.net/web/v10/CDWidget.js"></script>
          <div pageID="{{ form.id_for_contact_page }}"></div>
        </div>
      </div>
    </section>
  </main>
{% endblock %}
